<div class="content container-fluid">
    <div class="account-box mt-5">
        <div class="account-wrapper">
            <h3 class="account-title">Register</h3>
            <!-- Account Form -->
            <form name="formSignUp" method="POST">
                <div class="form-group">
                    <label>Email</label>
                    <input  class="form-control" 
                            type="text"
                            name="email"
                            >
                    <div class="email error mt-2" style="color:red"></div>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input  class="form-control" 
                            type="password"
                            name="password"
                            >
                    <div class="password error mt-2" style="color:red"></div>
                </div>
                {{!-- <div class="form-group">
                    <label>Repeat Password</label>
                    <input class="form-control" type="password" name="repeat_password"required>
                </div> --}}
                <div class="form-group">
                    <label>Phone</label>
                    <input  class="form-control" 
                            type="text" 
                            name="phone" 
                            >
                    <div class="phone error mt-2" style="color:red"></div>
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input  class="form-control" 
                            type="text" 
                            name="name" 
                            value=""
                            >
                    <div class="name error mt-2" style="color:red"></div>
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-primary account-btn" type="submit">Register</button>
                </div>
                <div class="account-footer">
                    <p>Already have an account? <a href="/login">Login</a></p>
                </div>
            </form>
            <!-- /Account Form -->
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function(){
        var form = document.forms['formSignUp']
        console.log(form)
        var emailError = $('.email.error')
        var passwordError = $('.password.error')
        var nameError = $('.name.error')
        var phoneError = $('.phone.error')
        form.addEventListener("submit", async (e)=>{
            e.preventDefault()
            //reset error
            emailError.text('')
            passwordError.text('')
            nameError.text('')
            phoneError.text('')
            // get the values
            const email = form.email.value
            const password = form.password.value
            const name = form.name.value
            const phone = form.phone.value
            
            axios.post('../register',{
                email: email,
                password: password,
                name: name,
                phone: phone
            })
            .then( async (res) =>{
                console.log(res.data)
                const user = await res.data.user
                if(user){
                    location.assign('/login')
                }
            })
            .catch(function (err){
                console.error(err.response)
                if(err.response){
                    const data = err.response.data
                    console.error(data)
                    const emailErr = data.errors.email
                    const passwordErr = data.errors.password
                    const nameErr = data.errors.name
                    const phoneErr = data.errors.phone
                    emailError.text(emailErr)
                    passwordError.text(passwordErr)
                    nameError.text(nameErr)
                    phoneError.text(phoneErr)
                }
            })
        })
    })
</script>

