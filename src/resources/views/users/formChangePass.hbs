<div class="container">   
    <form action="/account/change-password" class="col-sm-4 offset-6" method="POST">
        <h2>Đổi mật khẩu</h2>
        <div class="form-group">
            <label for="">Nhập mật khẩu cũ</label>
            <input id="password" name="password" class="form-control" type="password">
        </div>
        <div class="form-group">
            <label for="">Nhập mật khẩu mới</label>
            <input id="passwordNew" name="passwordNew" class="form-control" type="password">
        </div>
        <div class="form-group">
            <label for="">Nhập lại mật khẩu</label>
            <input id="passwordNewAgain" name="passwordNewAgain" class="form-control" type="password">
        </div>
        <button class="btn btn-success">Đổi mật khẩu</button>
    </form>
</div>

<script>
    var password = document.getElementById('password')
    var passwordNew = document.getElementById('passwordNew')
    var passwordNewAgain = document.getElementById('passwordNewAgain')
</script>