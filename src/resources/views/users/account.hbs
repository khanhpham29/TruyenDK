<div class="container mt-4 has-background-white">
    <div class="messages columns">
        {{> sidebar-account}}
        <div class="column columns">
            <div class="account user-main column">
                <h2>
                    Thông tin tài khoản
                </h2>
                <form action="/account/update" enctype="multipart/form-data" method="POST" width="100%">
                    <div  class=" avatar">
                        <img src="../../../img/{{user.avatar}}" alt="Ảnh bìa manga!!!">
                        <input class=" form-control" type="file" name="avatar" style="width: 300px ;color: black !important;">
                    </div>
                    <div  class="form-group">
                        <label for="">Email: </label>
                        <input class=" form-control" type="text" value="{{user.email}}" style="width:500px" disabled>
                    </div>
                    <div  class="form-group">
                        <label for="">Phone: </label>
                        <input class=" form-control"  type="text" value="{{user.phone}}" style="width:500px" disabled>
                    </div>

                    <h2>Thông tin cá nhân</h2>
                    <div class="form-group">
                        <label for="">Tên: </label>
                        <input class=" form-control" type="text" value="{{user.name}}" style="width:500px" name="name">
                    </div>

                    <div class="form-group">
                        Giới tính
                        <div id="gender" hidden>{{user.gender}}</div>
                        <input type="radio"  id="gender1" name="gender" value="1" checked>
                        <label for="gender1">Nam</label>
                        <input type="radio"  id="gender2" name="gender" value="2">
                        <label for="gender2">Nữ</label>
                    </div>
                    <div>
                        <button class="btn btn-success">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var genderFromData = document.getElementById('gender').innerText
    if(genderFromData == '1'){
        document.getElementById("gender1").checked =true
    }
    else if(genderFromData == '2'){
        document.getElementById("gender2").checked =true
    }
</script>