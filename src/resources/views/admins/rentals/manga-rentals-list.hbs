            <div class="rentals-list-data">
                <table class="table">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Tên truyện</td>
                            <td>Mô tả</td>
                        </tr>
                    </thead>
                    <tbody>
                        
                        <input type="hidden" value="{{user._id}}" id="userId">
                        {{#each mangas}}
                            <tr>
                                <th>{{sum @index 1}}</td>
                                <td><a href="/admin/rentals/list/{{this.slug}}"
                                        name="btn-Thue-Truyen">{{this.tentruyen}}</a></td>   
                                <td>{{this.mota}}</td>
                                <div class="control">
                                    <td>
                                        <a href="/admin/rentals/list/{{this.slug}}">Chi tiết</a>
                                    </td>
                                </div>
                            </tr>          
                        {{/each}}
                    </tbody>
                    
                </table>
                    
            </div>
        </div>
