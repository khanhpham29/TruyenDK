<div class="container mt-4">
    {{!-- info --}}
    <div class="row manga">
        <div class="card-header">
            <h4 class="card-title mb-0">Danh sách truyện đọc</h4>
        </div>
        <div class="top">
            <form action="/admin/manga/rentals/search">
                <input type="text" class="search-input" id="search" name="tentruyen">
                <button class="btn btn-success search-submit"  type="submit">Tìm</button>
            </form>
            <div class="button">
                <a href="/admin/manga/add" class="btn-add-manga">
                    <button class="btn btn-purple">Thêm truyện mới</button>
                </a>
            </div>
            
        </div>
        
        <div class="mangaList mt-4">
            <table class="table table-striped mb-4">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Tên truyện</td>
                        <td>Thể loại</td>
                        <td>Tinh trạng</td>
                        <td>Thời gian tạo</td>   
                        <td>Hành động</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each mangas}}
                        <tr>
                            <th>{{sum @index 1}}</td>
                            <td>{{this.nameManga}}</td> 
                            <td class="theloai">
                                {{#each this.category}}                              
                                    {{this.tenloai}},  
                                {{/each}}  
                            </td>
                            <td>{{this.status}}</td>
                            <td>{{dateFormat this.createdAt "DD/MM/YYYY"}}</td>                           
                            <td>
                                <a href="/admin/manga/{{this.slug}}/addchap" class="btn btn-purple">Thêm Chương </a>
                                <a href="/admin/manga/{{this.slug}}/edit" class="btn btn-primary">Sửa</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                
            </table>
                
        </div>
    </div>
</div>

