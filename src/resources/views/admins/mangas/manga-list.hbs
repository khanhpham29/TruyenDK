<div class="container">
    {{!-- info --}}
    <div class="row manga">
        <div class="top">
            <form action="/admin/manga/rentals/search">
                <input type="text" class="search-input" id="search" name="tentruyen">
                <button class="btn btn-success search-submit"  type="submit">Tìm</button>
            </form>
            <div class="button">
                <a href="/admin/manga/add" class="btn-add-manga">
                    <button class="btn btn-purple">Thêm truyện mới</button>
                </a>

                <a href="/admin/manga/rentals" class="btn-rentals-manga">
                    <button class="btn btn-purple" >Manga rentals</button>
                </a>
            </div>
            
        </div>
        
        <div class="mangaList mt-4">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Tên truyện</td>
                        <td>Thể loại</td>
                        <td>Tinh trạng</td>
                        <td>Thời gian tạo</td>   
                        <td>Hành động</td>
                    </tr>
                </thead>
                <tbody>
                    {{#each mangas}}
                        <tr>
                            <th>{{sum @index 1}}</td>
                            <td>{{this.tentruyen}}</td> 
                            <td class="theloai">
                                {{#each this.theloai}}                              
                                    {{this}},  
                                {{/each}}  
                            </td>
                            <td>{{this.tinhtrang}}</td>
                            <td>{{dateFormat this.createdAt "DD/MM/YYYY"}}</td>                           
                            <td>
                                <a href="/admin/manga/{{this.slug}}/addchap" class="btn btn-purple">Thêm</a>
                                <a href="/admin/manga/{{this.slug}}/edit" class="btn btn-primary">Sửa</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                
            </table>
                
        </div>
    </div>
</div>

<script>  
    var a = document.getElementsByClassName('theloai').length
    for(var i = 0; i< a ;i++){
        q = document.getElementsByClassName('theloai')[i].innerText
        b = q.lastIndexOf(',')
        c = q.slice(0,b)
        d = document.getElementsByClassName('theloai')[i].innerText = c
    }
</script>
