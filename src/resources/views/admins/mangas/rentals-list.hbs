
<div class="content container-fluid">
    <!-- /Page Header -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card mb-0">
                <div class="card-header">
                    <h4 class="card-title mb-0">Danh sách truyện cho thuê</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="datatable table table-stripped mb-0">
                            <thead>
                                <tr>
                                    <td>#</td>
                                    <td>Tên truyện</td>
                                    <td>Thể loại</td>
                                    <td>Trạng thái</td>
                                    <td>Hành động</td>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each mangas}}
                                    <tr>
                                        <th>{{sum @index 1}}</td>
                                        <td>{{this.tentruyen}}</td> 
                                        <td class="theloai">
                                            {{#each this.theloai}}                              
                                                {{this}},
                                            {{/each}}  
                                        </td>
                                        <td>{{this.tinhtrang}}</td>             
                                        <td>
                                            <a href="/admin/manga/rentals/{{this.slug}}/addbook" class="btn btn-purple">Thêm Truyện cho thuê</a>
                                        </td>               
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>			



<script>  
    var a = document.getElementsByClassName('theloai').length
    for(var i = 0; i< a ;i++){
        q = document.getElementsByClassName('theloai')[i].innerText
        b = q.lastIndexOf(',')
        c = q.slice(0,b)
        d = document.getElementsByClassName('theloai')[i].innerText = c
    }
</script>

