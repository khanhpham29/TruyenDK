
<div class="container">
        <div class="rentals-list">
            <div>
                <form action="/admin/manga/rentals/search">
                    <input type="text" class="search-input" id="search" name="tentruyen">
                    <button class="search-submit"  type="submit">Tìm</button>
                </form>
            </div>
            <div>
                <a href="/admin/manga" class="btn-back">
                    <button class="btn btn-primary" >Quay lại</button>
                </a>
                
            </div>
            
            <div class="rentals-list-data">
                <table class="table">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Tên truyện</td>

                            <td>Thể loại</td>
                            <td>Mô tả</td>
                        </tr>
                    </thead>
                    <tbody>
                        
                        {{#each mangas}}
                            <tr>
                                <th>{{sum @index 1}}</td>
                                <td>{{this.tentruyen}}</td> 
                                <td class="theloai">
                                    {{#each this.theloai}}                              
                                        {{this}},  
                                    {{/each}}  
                                </td>                           
                                
                                <td><a href="/admin/manga/rentals/{{this.slug}}">{{this.tentruyen}}</a></td>   
                                <td>{{this.mota}}</td> 
                                <div class="control">
                                    <td>
                                        <a href="/admin/manga/rentals/{{this.slug}}/addbook">Thêm chap</a>
                                    </td>
                                </div>                 
                            </tr>
                        {{/each}}
                    </tbody>
                    
                </table>
                    
            </div>
        </div>
    </div>

<script>  
    var a = document.getElementsByClassName('theloai').length
    for(var i = 0; i< a ;i++){
        q = document.getElementsByClassName('theloai')[i].innerText
        b = q.lastIndexOf(',')
        c = q.slice(0,b)
        d = document.getElementsByClassName('theloai')[i].innerText = c
    }
</script>

