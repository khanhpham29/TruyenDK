
<div class="content">
    {{!-- Nội dung Trang --}}
    <div class="details-rental-manga">
        <a href="/admin/manga/rentals/" class="btn-back">
            <button class="btn btn-primary" >Quay lại</button>
        </a>
        <H2 class="ten-truyen">Danh sách truyện: {{mangas.tentruyen}}</H2>
        <div class="rentalsListData">
            {{#each rentals.books}}
                <div class="row">
                    <div class="col-xs-6 col-md-3">
                        <div class="card" style="width: 18rem;">
                            <img class="card-img-top" src="img/{{this.anhbia}}" alt="Ảnh bìa">
                            <div class="card-body">
                                <h5 class="card-title">Tên tập: {{ this.tentap }}</h5>
                                <p class="card-text">Giá: {{this.gia}}</p>
                            </div>
                        </div>
                    </div>                
                </div>
            {{/each}} 
        </div>
    </div>
</div>
    